
@{
    ViewBag.Title = "Products";
}
@model List<ECommerceApp.BLL.Models.ProductVM>

<h2>@ViewBag.Title.</h2>
<hr />
<div class="container-fluid">
    @foreach (var item in Model)
    {
        <div class="col-lg-3" style="margin-bottom:20px">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@(item.DisplayImages.FirstOrDefault()?.FileContent)" alt="Product image cap" style="width: 18rem;height: 12rem;">
                <div class="card-body">
                    <h4 class="card-header">@item.Name</h4>
                    <p class="card-text">UnitPrice: @item.UnitPrice</p>
                    <p class="card-text">Barcode: @item.Barcode</p>
                    <p class="card-text">UnitsInStock: @item.UnitsInStock</p>
                    <p class="card-text">Description: @item.Description</p>
                </div>
            </div>
        </div>
    }
</div>

