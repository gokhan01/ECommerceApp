@{
    ViewBag.Title = "Kullanıcı Yetkilendirme";
}
@model string
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.Hidden("UserId", Model);

    <fieldset class="form-horizontal">
        <h4>Kullanıcı Yetkilendirme</h4>
        <hr />
        @Html.DropDownList("RoleId", "Seçiniz")
        <div class="form-actions no-color">
            <input type="submit" value="Kaydet" class="btn" />
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
