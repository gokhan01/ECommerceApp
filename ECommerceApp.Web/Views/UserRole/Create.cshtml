@{
    ViewBag.Title = "Authorization";
}
@model string
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.Hidden("UserId", Model);

    <fieldset class="form-horizontal">
        <hr />

        <div class="form-group">
            @Html.Label("", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownList("RoleId", (IEnumerable<SelectListItem>)ViewBag.RoleId,"Choose Role", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-actions no-color">
            <input type="submit" value="Create" class="btn" />
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
